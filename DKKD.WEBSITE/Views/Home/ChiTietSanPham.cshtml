@using DKKD.MODELS;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model DKKD.MODELS.SanPham
@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.Configuration;
@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration _config
@{
    var lssp = ViewData["lssp"] as List<SanPham>;
    var domain = _config["CMSDomain"].ToString();
}
<div style="margin-top:50px">

</div>
<div class="space-medium">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                @{
                    var y = domain + Model.Avatar;
                }
                <img src="@y" alt="@Model.TenSP" style="width:100%;" />
            </div>
            <div class="col-lg-6">
                <div>
                    <h3>@Model.TenSP</h3>
                </div>
                <div>
                    <label>Giới thiệu:</label>
                    <p>@Model.GioiThieu</p>
                </div>
                <div>
                    @{
                        int dongia = (int)Model.DonGia;
                        string dg = String.Format("{0:0,00}", dongia);
                        float sale = ((float)(100 - Model.Sale) / 100);
                        float a = (float)(Model.DonGia * sale);
                        string A = String.Format("{0:0,00}", a);

                    }
                    <a href="#" class="product-price">@a₫</a>
                    <a href="#" class="discounted-price">@dg₫</a>
                    <span class="offer-price">@Model.Sale%off</span>
                </div>
                <div style="display: inline-grid;">
                    <input type="number" class="form-control soluong" min="1" name="sl" value="1" id="inpSL" />
                    <div>
                        <button type="button" class="btn btn-primary btn-cart" data-id="@Model.ID"><i class="fa fa-shopping-cart"></i>Mua Ngay</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top:20px">
            <label>Mô tả:</label>
            <p>
                @Model.MoTa
            </p>
        </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="box">
                        <div class="box-head">
                            <h3 class="head-title">Có thể bạn quan tâm</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-carousel">
                <div class="box-body">
                    <div class="row">
                        @if (lssp.Count() == 0)
                        {
                            <h2>Không có sản phẩm</h2>
                        }
                        else
                        {
                            <div class="owl-carousel owl-two owl-theme">
                                <!-- product -->
                                @foreach (var item in lssp)
                                {
                                    <div class="item">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="product-block">
                                                <div class="product-img" onclick="ChiTiet(@item.ID)">
                                                    @{
                                                        var y1 = domain + item.Avatar;
                                                    }
                                                    <img src="@y1" alt="@item.TenSP">
                                                </div>
                                                <div class="product-content">
                                                    <h5 onclick="ChiTiet(@item.ID)" style="height:40px"><a href="#" class="product-title">@item.TenSP</a></h5>
                                                    <div class="product-meta">
                                                        @{
                                                            int dongia1 = (int)item.DonGia;
                                                            string dg1 = String.Format("{0:0,00}", dongia1);
                                                            float sale1 = ((float)(100 - item.Sale) / 100);
                                                            float a1 = (float)(item.DonGia * sale1);
                                                            string A1 = String.Format("{0:0,00}", a1);

                                                        }
                                                        <div class="row form-group">
                                                            <span class="product-price">@A₫</span>
                                                            <span class="discounted-price">@dg₫</span>
                                                        </div>
                                                        <div class="col-lg-12" style="text-align:center">
                                                            <span class="offer-price">@item.Sale%off</span>
                                                        </div>
                                                    </div>
                                                    <div class="shopping-btn">
                                                        <a href="#" class="product-btn btn-like"><i class="fa fa-heart"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <!-- /.product -->
                            </div>
                        }
                    </div>
                </div>
            </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".btn-cart").on("click", function () {
            $.ajax({
                url: "/Cart/AddToCart",
                method: "POST",
                data: {
                    id: $(this).data("id"),
                    sl: $(".soluong").val(),
                },
                success: function (data) {
                    $(".a").html("");
                    $(".a").html('<sup class="cart-quantity">' + data.soluong + '</sup>');
                    showAlert("Thêm mới thành công", 2);
                },
                error: function (data) {
                    showAlert("Thêm mới thất bại");
                }
            })
        })
    })
    function ChiTiet(id) {
        $(location).attr('href', `/chi-tiet-san-pham/?id=${id}`)
    }
</script>