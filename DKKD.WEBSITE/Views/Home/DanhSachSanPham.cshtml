@using DKKD.MODELS;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<DKKD.MODELS.SanPham>
@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.Configuration;
@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration _config
@{
    var name1 = ViewData["name"] as string;
    var tenth = ViewData["tenth"] as string;
    var tendm = ViewData["tendm"] as string;
    var domain = _config["CMSDomain"].ToString();
}
<style>
    .space-medium {
        padding-top: 30px;
        padding-bottom: 30px;
    }
</style>
<div class="container" style="margin-top:50px">
    @if (name1 != null)
    {
        <h3>Tất cả sản phẩm có ký tự "@name1"</h3>
    }
    @if (tenth != null)
    {
        <h3>Sản phẩm thuộc thương hiệu <strong>@tenth</strong></h3>
    }
    @if (tendm != null)
    {
        <h3>Sản phẩm thuộc danh mục <strong>@tendm</strong></h3>
    }
</div>
<div class="space-medium">
    <div class="container">
        @if (Model.Count() == 0)
        {
            <div class="row">
                <div class="isotope">
                    <h2>Không có sản phẩm</h2>
                </div>
            </div>

        }
        else
        {
            <div class="row">
                    @foreach (var item in Model)
                    {
                        <!-- product -->
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div style="margin:10px">
                                <input type="hidden" name="sl" value="1" class="soluong" />
                                <div class="product-block">
                                    <div class="product-img" onclick="ChiTiet(@item.ID)">
                                        @{
                                            var y = domain + item.Avatar;
                                        }
                                        <img src="@y" alt="@item.TenSP">
                                    </div>
                                    <div class="product-content">
                                        <h5 onclick="ChiTiet(@item.ID)" style="height:40px"><a href="#" class="product-title">@item.TenSP</a></h5>
                                        <div class="product-meta">
                                            @{
                                                int dongia = (int)item.DonGia;
                                                string dg = String.Format("{0:0,00}", dongia);
                                                float sale = ((float)(100 - item.Sale) / 100);
                                                float a = (float)(item.DonGia * sale);
                                                string A = String.Format("{0:0,00}", a);

                                            }
                                            <div class="row form-group">
                                                <span class="product-price">@A₫</span>
                                                <span class="discounted-price">@dg₫</span>
                                            </div>
                                            <div class="col-lg-12" style="text-align:center">
                                                <span class="offer-price">@item.Sale%off</span>
                                            </div>
                                        </div>
                                        <div class="shopping-btn">
                                            <a href="#" class="product-btn btn-like"><i class="fa fa-heart"></i></a>
                                            <button type="button" class="product-btn btn-cart" data-id="@item.ID"><i class="fa fa-shopping-cart"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.product -->
                    }
            </div>
            <div class="row">
                <div class="dataTables_paginate paging_simple_numbers" id="example_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("", "danh-sach-san-pham", new
               {

                   name = HttpContextAccessor.HttpContext.Request.Query["name"],
                   idth = HttpContextAccessor.HttpContext.Request.Query["idth"],
                   iddm = HttpContextAccessor.HttpContext.Request.Query["iddm"],
                   page
               }), new X.PagedList.Web.Common.PagedListRenderOptionsBase
               {
                   LiElementClasses = new string[] { "page-item" },
                   PageClasses = new string[] { "page-link" },
                   MaximumPageNumbersToDisplay = 5,
               }
                                     )
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".btn-cart").on("click", function () {
            $.ajax({
                url: "/Cart/AddToCart",
                method: "POST",
                data: {
                    id: $(this).data("id"),
                    sl: $(".soluong").val(),
                },
                success: function (data) {
                    $(".a").html("");
                    $(".a").html('<sup class="cart-quantity">' + data.soluong + '</sup>');
                    showAlert("Thêm mới thành công", 2);
                },
                error: function (data) {
                    showAlert("Thêm mới thất bại");
                }
            })
        })
    })
    function ChiTiet(id) {
        $(location).attr('href', `/chi-tiet-san-pham/?id=${id}`)
    }
</script>
