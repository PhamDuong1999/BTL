<!-- mobile showcase -->
<div style="height:60px"></div>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="box">
                <div class="box-head">
                    <h3 class="head-title">Thương hiệu</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="product-carousel">
        <div class="box-body">
            <div class="row">
                <div class="owl-carousel owl-two owl-theme">
                    @foreach (var item in lsth)
                    {
                        <!-- product -->
                        <div class="item">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="/danh-sach-san-pham?name=&idth=@item.ID&iddm=-1">
                                    @{
                                        var y = domain + item.Logo;
                                    }
                                    <img src="@y" alt="@item.TenNCC">
                                </a>
                            </div>
                            <!-- /.product -->
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.mobile showcase -->
<!-- latest products -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
