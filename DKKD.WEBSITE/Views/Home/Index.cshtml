    </div>
    <div class="product-carousel">
        <div class="box-body">
            <div class="row">
                <div class="owl-carousel owl-two owl-theme">
                    <!-- product -->
                    @foreach (var item in lsspnew)
                    {
                        <div class="item">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <input type="hidden" value="1" class="soluong" />
                                <div class="product-block">
                                    <div class="product-img" onclick="ChiTiet(@item.ID)">
                                        @{
                                            var y = domain + item.Avatar;
                                        }
                                        <img src="@y" alt="@item.TenSP">
                                    </div>
                                    <div class="product-content">
                                        <h5 onclick="ChiTiet(@item.ID)" style="height:40px"><a href="#" class="product-title">@item.TenSP</a></h5>
                                        <div class="product-meta">
                                            @{
                                                int dongia = (int)item.DonGia;
                                                string dg = String.Format("{0:0,00}", dongia);
                                                float sale = ((float)(100 - item.Sale) / 100);
                                                float a = (float)(item.DonGia * sale);
                                                string A = String.Format("{0:0,00}", a);

                                            }
                                            <div class="row form-group">
                                                <span class="product-price">@A₫</span>
                                                <span class="discounted-price">@dg₫</span>
                                            </div>
                                            <div class="col-lg-12" style="text-align:center">
                                                <span class="offer-price">@item.Sale%off</span>
                                            </div>
                                        </div>
                                        <div class="shopping-btn">
                                            <a href="#" class="product-btn btn-like"><i class="fa fa-heart"></i></a>
                                            <button type="button" class="product-btn btn-cart" data-id="@item.ID"><i class="fa fa-shopping-cart"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- /.product -->
                </div>
            </div>
        </div>
    </div>
</div>
