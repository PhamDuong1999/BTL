
@{
    ViewData["Title"] = "Danh sách đã xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header border-0">
                <div class="row" id="frmFilter">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input id="txtName" type="text" class="form-control" placeholder="Tìm kiếm theo tên ">
                        </div>
                    </div>
                    <div class="col-lg-8" style="float:left">
                        <button id="btnSearch" class="btn btn-primary">
                            <i class="fa fa-search mr-1" aria-hidden="true"></i>Tìm kiếm
                        </button>
                        <button id="btnDanhSachBTPhanCap" class=" btn btn-success btn-primary">
                            <i class="fa fa-reply mr-1" aria-hidden="true"></i>Quay lại danh sách
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-header -->
        <div id="dtTable">
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
</div>
<script>
    var frmFilter = $('#frmFilter');
    var urlDomain = "/nha-cung-cap";
    var take = 10;
    var skip = 0;
    $(document).ready(function () {
        getData("", 3);
        searching();
        frmFilter.find('#btnDanhSachBTPhanCap').on('click', function () {
            window.location.href = urlDomain + "/danh-sach"
        });
    });
    function searching() {
        frmFilter.find("#btnSearch").on('click', function () {
            var name = frmFilter.find("#txtName").val();

            //var status = frmFilter.find("#drStatus").val()
            getData(name, 3);
        });

    }
    function getData(name, status) {
        showLoading()
        $.ajax({
            url: urlDomain + "/get-list-delete/?name=" + name + "&status=" + status,
            method: "GET",
            data: {
                title: frmFilter.find('#txtName').val(),
                take: take,
                skip: skip
            }
            , success: function (response) {
                $('#dtTable').html(response);
                hideLoading()
            }
        });
    }


</script>
