@model List<DKKD.MODELS.NhaCungCap>
<table style="width:100%;height:100%;" id="tblDisplayDaXoa" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th style="text-align:center;width:10%;">STT</th>
            <th style="width:30%">Tên nhà cung cấp</th>
            <th style="width:40%">Ảnh</th>
            <th style="text-align:center;width:20%">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <tr>
                <td style="text-align:center;width:10%;">@(i+1)</td>
                <td style="width:30%;">@item.TenNCC</td>
                
                <td style="width:40%;">
                    <img src="@item.Logo" style="max-width: 80%; max-height: 100px;" class="lightbox-image" alt="@item.TenNCC" />
                </td>
                <td style="text-align:center;width:20%;">
                    <a href="javascript:;" onclick="openRevert(@item.ID)"><i class="fas fa-trash-restore" style="color:black"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    var tblDisplay = $('#tblDisplayDaXoa');
    $(document).ready(function () {
        setDataTable();
    });

    function setDataTable() {
        tblDisplay.DataTable({
            "paging": true,
            "lengthChange": false,
            "pagingType": "full_numbers",
            "searching": true,
            "ordering": true,
            "info": false,
            "autoWidth": false,
            "responsive": true,
            "sDom": 'lrtip',
            order:[],
            "columnDefs": [
                { "orderable": false, "targets": 1 },
                { "orderable": false, "targets": 2 },
                { "orderable": false, "targets": 3 },
            ],
            "language": {
                "emptyTable": "Không tìm thấy dữ liệu",
                "paginate": {
                    "first": "Trang đầu",
                    "last": "Trang cuối",
                    "next": "Trang tiếp",
                    "previous": "Trang trước"
                }
            }
        });
    }
    function openRevert(id) {
        if (confirm("Bạn có muốn khôi phục dữ liệu")) {
            $.ajax({
                url: urlDomain + "/revert",
                data: {
                    id:id
                },
                method: "Post",
                success: function (response) {
                    showAlert(response.message, 2)
                    var name = frmFilter.find("#txtName").val();
                   
                    getData(name, 3);
                }
            });
        }
    }
</script>